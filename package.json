{
  "name": "yggdrasil-mcp",
  "version": "0.8.0",
  "description": "Reasoning orchestration MCP - Tree of Thoughts with multi-agent evaluation. Fork of Anthropic's sequential-thinking with string coercion fix.",
  "license": "MIT",
  "author": "Henry Chong <henrychong-ai@gmail.com>",
  "contributors": [
    "Anthropic, PBC (original)"
  ],
  "homepage": "https://github.com/henrychong-ai/yggdrasil-mcp",
  "bugs": "https://github.com/henrychong-ai/yggdrasil-mcp/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/henrychong-ai/yggdrasil-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sequential-thinking",
    "tree-of-thoughts",
    "reasoning",
    "llm",
    "ai",
    "claude"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yggdrasil-mcp": "dist/index.js",
    "mcp-server-sequential-thinking": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "shx rm -rf dist && tsc && shx chmod +x dist/*.js",
    "prepare": "husky",
    "watch": "tsc --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "pnpm lint:fix && pnpm format",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm format:check && pnpm typecheck"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chalk": "^5.3.0",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "overrides": {
      "@isaacs/brace-expansion": "^5.0.1"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@stylistic/eslint-plugin": "^5.7.1",
    "@types/node": "^22",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semver": "^7.7.3",
    "shx": "^0.3.4",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
