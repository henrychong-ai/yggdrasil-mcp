{
  "name": "yggdrasil-mcp",
  "version": "0.6.3",
  "description": "Reasoning orchestration MCP - Tree of Thoughts with multi-agent evaluation. Fork of Anthropic's sequential-thinking with string coercion fix.",
  "license": "MIT",
  "author": "Henry Chong <henrychong-ai@gmail.com>",
  "contributors": [
    "Anthropic, PBC (original)"
  ],
  "homepage": "https://github.com/henrychong-ai/yggdrasil-mcp",
  "bugs": "https://github.com/henrychong-ai/yggdrasil-mcp/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/henrychong-ai/yggdrasil-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sequential-thinking",
    "tree-of-thoughts",
    "reasoning",
    "llm",
    "ai",
    "claude"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yggdrasil-mcp": "dist/index.js",
    "mcp-server-sequential-thinking": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc && shx chmod +x dist/*.js",
    "prepare": "husky",
    "watch": "tsc --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "pnpm lint:fix && pnpm format",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "chalk": "^5.3.0",
    "yargs": "^17.7.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "semver": "^7.7.3",
    "shx": "^0.3.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
