{
  "name": "yggdrasil-mcp",
  "version": "1.0.1",
  "description": "Reasoning orchestration MCP - Tree of Thoughts with multi-agent evaluation. Fork of Anthropic's sequential-thinking with string coercion fix.",
  "license": "MIT",
  "author": "Henry Chong <henrychong-ai@gmail.com>",
  "contributors": [
    "Anthropic, PBC (original)"
  ],
  "homepage": "https://github.com/henrychong-ai/yggdrasil-mcp",
  "bugs": "https://github.com/henrychong-ai/yggdrasil-mcp/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/henrychong-ai/yggdrasil-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sequential-thinking",
    "tree-of-thoughts",
    "reasoning",
    "llm",
    "ai",
    "claude"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yggdrasil-mcp": "dist/index.js",
    "mcp-server-sequential-thinking": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=24"
  },
  "packageManager": "pnpm@10.30.0",
  "scripts": {
    "build": "shx rm -rf dist && tsc && shx chmod +x dist/*.js",
    "prepare": "husky",
    "watch": "tsc --watch",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "oxlint --max-warnings=0",
    "lint:fix": "oxlint --fix --max-warnings=0",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "fix": "pnpm lint:fix && pnpm format",
    "typecheck": "tsc --noEmit",
    "check": "pnpm lint && pnpm format:check && pnpm typecheck"
  },
  "lint-staged": {
    "*.ts": [
      "oxlint --fix --max-warnings=0",
      "biome format --write"
    ],
    "*.json": [
      "biome format --write"
    ]
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "chalk": "^5.6.2",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "overrides": {
      "@isaacs/brace-expansion": "^5.0.1"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@types/node": "^25",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.48.0",
    "semver": "^7.7.4",
    "shx": "^0.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
